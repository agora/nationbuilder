  		<div id="nav_third_<% if ['losers_24hr'].include?(params[:action]) %>1<% elsif ['losers_7days'].include?(params[:action]) %>2<% elsif ['losers_30days'].include?(params[:action]) %>3<% end %>">	

  			<ul id="menu_third">

  				<li class="tab1">

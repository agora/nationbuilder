  		<div id="nav_third_<% if ['picture'].include?(params[:action]) %>1<% elsif ['buddy_icon'].include?(params[:action]) %>2<% elsif ['fav_icon'].include?(params[:action]) %>3<% end %>">	

  			<ul id="menu_third">

  				<li class="tab1">
  					<span class="tab_header">
  						<%= link_to t('menu.admin.logo'), :controller => "admin", :action => "picture" %>
  					</span>
  				</li>			


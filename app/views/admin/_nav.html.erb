  			</li>
  			<li class="tab4">
  				<span class="tab_header">
  					<%= link_to t('menu.admin.graphics'), :controller => "admin", :action => "picture" %>
  				</span>
  			</li>
  			<li class="tab5">
  				<span class="tab_header">
  					<%= link_to t('menu.admin.colors'), new_color_scheme_url %>
  				</span>
  			</li>	
